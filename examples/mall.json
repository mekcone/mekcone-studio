{
    "groupId": "com.vancone",
    "artifactId": "mall",
    "version": "0.1.0",
    "languages": [
        "en-US",
        "zh-CN"
    ],
    "name": {
        "default": "zh-CN",
        "en-US": "VanCone Mall",
        "zh-CN": "甜筒云商城",
        "zh-TW": "甜筒雲商城",
        "jp": "VanCone デパート",
        "th": "มอลล์ VanCone"
    },
    "description": {
        "default": "zh-CN",
        "en-US": "VanCone Mall Project",
        "zh-CN": "甜筒云商城后台项目"
    },
    "modules": [
        {
            "type": "spring-boot",
            "name": "vancone-mall-server",
            "enable": true,
            "extensions": [
                {
                    "type": "cross-origin",
                    "enable": true,
                    "properties": {
                        "allowed-methods": "GET,POST",
                        "allowed-headers": "*",
                        "allowed-origins": "*"
                    }
                },
                {
                    "type": "lombok",
                    "enable": true
                },
                {
                    "type": "swagger2",
                    "enable": true
                }
            ],
            "properties": {
                "ormType": "MYBATIS_ANNOTATION",
                "port": 8081,
                "postmanCollection": true
            }
        },
        {
            "type": "vite-admin",
            "name": "vancone-mall-web",
            "enable": true
        }
    ],
    "datasource": {
        "mysql": {
            "sqlGen": true,
            "connection": {
                "host": "127.0.0.1",
                "port": 3306,
                "database": "mall",
                "username": "root",
                "password": "123456"
            },
            "tables": [
                {
                    "name": "product",
                    "description": "商品对象",
                    "columns": [
                        {
                            "name": "id",
                            "type": "varchar",
                            "length": 50,
                            "primaryKey": true
                        },
                        {
                            "name": "name",
                            "type": "varchar",
                            "filter": "regex",
                            "length": 200
                        },
                        {
                            "name": "amount",
                            "type": "int",
                            "filter": "default",
                            "comment": "商品库存"
                        }
                    ]
                }
            ]
        }
    }
}