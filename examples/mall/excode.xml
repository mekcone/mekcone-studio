        <datasource>
            <redis mode="single">
                <nodes>
                    <node database="0" host="10.10.10.1" port="6379" password="" />
                </nodes>
            </redis>

            <relational-database sql-gen="true">
                <databases>
                    <database type="mysql" host="localhost:3306" name="mekcone_mall" username="root" password="123456" timezone="GMT%2B8">
                        <tables>
                            <table name="product" description="商品对象">
                                <columns>
                                    <column name="id" type="int" primaryKey="true" />
                                    <column name="name" type="varchar" length="50" />
                                    <column name="catalogue_id" type="varchar" length="50" filter="true" />
                                    <column name="price" type="double" />
                                    <column name="description" type="varchar" length="50" detail="true" />
                                </columns>
                            </table>
                            <table name="cart" description="购物车对象">
                                <columns>
                                    <column name="item_id" type="varchar" length="50" primaryKey="true" />
                                    <column name="goods_id" type="varchar" length="50" />
                                    <column name="user_id" type="varchar" length="20" />
                                    <column name="amount" type="int" />
                                </columns>
                            </table>
                            <table name="catalogue" description="商品门类" catalogueOf="goods">
                                <columns>
                                    <column name="catalogue_id" type="varchar" length="50" primaryKey="true" />
                                    <column name="catalogue_name" type="varchar" length="50" />
                                </columns>
                            </table>
                        </tables>
                    </database>
                </databases>
            </relational-database>
        </datasource>

