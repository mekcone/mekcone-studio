<?xml version="1.0" encoding="UTF-8" ?>
<project>
    <groupId>com.mekcone</groupId>
    <artifactId>mall</artifactId>
    <version>0.0.1</version>
    <languages>
        <language>en-US</language>
        <language>zh-CN</language>
    </languages>

    <name default="MekCone Mall">
        <word lang="zh-CN" value="锥云商城" />
        <word lang="zh-TW" value="錐雲商城" />
        <word lang="jp" value="MekCone デパート" />
        <word lang="th" value="MekCone มอลล์" />
    </name>
    
    <description default="MekCone Mall Project">
        <word lang="zh-CN" value="锥云商城后台项目" />
    </description>
    
    <modules>
        <document use="false">
            <keywords>
                <keyword type="create">创建</keyword>
                <keyword type="retrieve">获取</keyword>
                <keyword type="retrieveList">获取所有</keyword>
                <keyword type="update">更新</keyword>
                <keyword type="delete">删除</keyword>
            </keywords>
        </document>

        <deployment>
            <operating-systems>
                <operating-system type="ubuntu" version="20.04" />
                <operating-system type="centos" version="8" />
            </operating-systems>

            <enable-docker>true</enable-docker>

            <extensions>
                <extension id="mariadb" use="true" />
                <extension id="mongodb" use="true" />
                <extension id="nginx" use="true" />
                <extension id="supervisor" use="true" />
            </extensions>
        </deployment>

        <relational-database use="false">
            <databases>
                <database type="mysql" host="localhost:3306" name="mekcone_mall" username="root" password="123456" timezone="GMT%2B8">
                    <tables>
                        <table name="goods" description="商品对象">
                            <columns>
                                <column name="goods_id" type="int" primaryKey="true" />
                                <column name="goods_name" type="varchar" length="50" />
                                <column name="catalogue_id" type="varchar" length="50" filter="true" />
                                <column name="goods_price" type="double" />
                                <column name="goods_description" type="varchar" length="50" detail="true" />
                            </columns>
                        </table>
                        <table name="cart" description="购物车对象">
                            <columns>
                                <column name="item_id" type="varchar" length="50" primaryKey="true" />
                                <column name="goods_id" type="varchar" length="50" />
                                <column name="user_id" type="varchar" length="20" />
                                <column name="amount" type="int" />
                            </columns>
                        </table>
                        <table name="catalogue" description="商品门类" catalogueOf="goods">
                            <columns>
                                <column name="catalogue_id" type="varchar" length="50" primaryKey="true" />
                                <column name="catalogue_name" type="varchar" length="50" />
                            </columns>
                        </table>
                    </tables>
                </database>
            </databases>
        </relational-database>

        <!-- <mongodb>
            <databases>
                <database>
                    <collections>
                        <collection>
                            <document></document>
                        </collection>
                    </collections>
                </database>
            </databases>
        </mongodb> -->

        <spring-boot use="false">
            <extensions>
                <extension id="lombok" use="true"></extension>
                <extension id="swagger2" use="true"></extension>
                <extension id="cross-origin" use="true"></extension>
                <extension id="mwp-account" use="true"></extension>
            </extensions>

            <properties>
                <application-name>Mall</application-name>
                <server-port>9090</server-port>
                <page-size>15</page-size>

                <cross-origin>
                    <!-- <allowed-headers>
                        <allowed-header>X-Custom-Header</allowed-header>
                    </allowed-headers>
                    <allowed-methods>
                        <allowed-method>GET</allowed-method>
                        <allowed-method>POST</allowed-method>
                    </allowed-methods> -->
                    <allowed-origins>
                        <allowed-origin>*</allowed-origin>
                    </allowed-origins>
                </cross-origin>

                <mwp-account>
                    <test-account username="admin" password="admin" role="admin" profile="" />
                </mwp-account>
            </properties>
        </spring-boot>

        <vue-element-admin use="true">
            <author>Tenton Lien</author>
            <email>tentonlien@gmail.com</email>
            <license>MIT</license>
        </vue-element-admin>

        <website-page use="false">
            <theme type="login" id="0" color="blue" />
            <pages>
                <page type="home">
                    <title default="Mall">
                        <word lang="zh-CN" value="商城" />
                    </title>
                    <images>
                        <image></image>
                    </images>
                </page>
                <page type="about">
                    <content>

                    </content>
                </page>
            </pages>
        </website-page>
    </modules>
</project>