<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="wrapper" styleClass="wrapper"
            fx:controller="com.mekcone.incrud.gui.controller.MainWindowController" stylesheets="@/stylesheets/MainWindow.css">
    <top>
        <BorderPane>
            <center>

                <HBox fx:id="topBarWrapper" prefHeight="40" onMousePressed="#press" onMouseDragged="#drag">
<!--                    <Label styleClass="title" text="AutoCRUD"/>-->
                <MenuBar fx:id="menuBar">
                    <Menu fx:id="menuFile" text="_File" styleClass="menu">
                        <MenuItem styleClass="menuItem" fx:id="menuItemFileNew" text="New" accelerator="Ctrl+N"></MenuItem>
                        <MenuItem styleClass="menuItem" text="Open" accelerator="Ctrl+O" onAction="#handleOpenFile"></MenuItem>
                        <SeparatorMenuItem style="-fx-border-color: #f00"></SeparatorMenuItem>
                        <MenuItem styleClass="menuItem" text="Save" accelerator="Ctrl+S"></MenuItem>
                        <MenuItem styleClass="menuItem" text="Save As..."></MenuItem>
                        <SeparatorMenuItem style="-fx-border-color: #f00"></SeparatorMenuItem>
                        <MenuItem styleClass="menuItem" text="Settings"></MenuItem>
                        <MenuItem styleClass="menuItem" text="Project Structure" onAction="#handleProjectStructure"></MenuItem>
                        <SeparatorMenuItem style="-fx-border-color: #f00"></SeparatorMenuItem>
                        <MenuItem styleClass="menuItem" text="Exit" onAction="#handleExit" accelerator="Ctrl+Q"></MenuItem>
                    </Menu>
                    <Menu text="_Edit">
                        <MenuItem styleClass="menuItem" text="Undo"></MenuItem>
                        <MenuItem styleClass="menuItem" text="Redo"></MenuItem>
                    </Menu>
                    <Menu text="_Tables">
                        <MenuItem styleClass="menuItem" text="Auto Scan"></MenuItem>
                    </Menu>
                    <Menu text="_Help">
                        <MenuItem styleClass="menuItem" text="About"></MenuItem>
                    </Menu>
                </MenuBar>
                </HBox>
            </center>

