    <left>
            <VBox fx:id="leftBar">

            </VBox>

    </left>

    <center>
        <BorderPane>
            <left>
                <VBox fx:id="tablePaneWrapper">
                    <HBox fx:id="tablePaneBar">
                        <ImageView style="-fx-translate-x: 10; -fx-translate-y: 8;">
                            <image>
                                <Image url="/icons/console.png" />
                            </image>
                        </ImageView>
                        <Label fx:id="tableBarLabel" text="Data Tables" style="-fx-translate-x: 12;">

                        </Label>
                    </HBox>
                    <TreeView fx:id="treeViewProject">
                        <TreeItem fx:id="rootTreeItem" expanded="true"></TreeItem>
                    </TreeView>
                </VBox>
            </left>

            <center>
                <VirtualizedScrollPane>
                    <content>
                        <CodeArea fx:id="codeArea" wrapText="true"></CodeArea>
