        </mongodb> -->

        <spring-boot use="true">
            <extensions>
                <extension id="lombok" use="true"></extension>
                <extension id="swagger2" use="false"></extension>
            </extensions>

            <properties>
                <application-name>Mall</application-name>
                <server-port>9090</server-port>
                <!-- <cors-allowedOrigins>*</cors-allowedOrigins>
                <cors-allowedMethods>{GET, POST, PUT, DELETE}</cors-allowedMethods> -->
                <page-size>15</page-size>
            </properties>
        </spring-boot>

