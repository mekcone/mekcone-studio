<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xsi:noNamespaceSchemaLocation="file:///D:/Projects/excrud/resources/xsd/excrud.xsd">
    <groupId>com.mekcone.excrud.example</groupId>
    <artifactId>mall</artifactId>
    <name>MekCone Mall</name>
    <version>0.0.1</version>
    <description>MekCone Mall Project</description>

    <apiDocument>
        <title>MekCone 商城</title>
        <description>MekCone 商城接口文档</description>
        <keywords>
            <keyword type="create">创建</keyword>
            <keyword type="retrieve">获取</keyword>
            <keyword type="retrieveList">获取所有</keyword>
            <keyword type="update">更新</keyword>
            <keyword type="delete">删除</keyword>
        </keywords>
    </apiDocument>

    <databases>
        <database type="mysql" host="localhost:3306" username="root" password="123456">
            <tables>
                <table name="goods">
                    <columns>
                        <column name="goods_id" type="int" primaryKey="true"/>
                        <column name="goods_name" type="varchar(50)"/>
                        <column name="catalogue_id" type="varchar(50)"/>
                        <column name="goods_price" type="double"/>
                        <column name="goods_description" type="varchar(50)"/>
                    </columns>
                </table>
                <table name="cart">
                    <columns>
                        <column name="item_id" type="varchar(50)" primaryKey="true"/>
                        <column name="goods_id" type="varchar(50)"/>
                        <column name="user_id" type="varchar(20)"/>
                        <column name="amount" type="int"/>
                    </columns>
                </table>
                <table name="catalogue">
                    <columns>
                        <column name="catalogue_id" type="varchar(50)" primaryKey="true"/>
                        <column name="catalogue_name" type="varchar(50)"/>
                    </columns>
                </table>
            </tables>
        </database>
    </databases>

    <exports>
        <export type="spring-boot-project">
            <plugins>
                <plugin name="cross-origin">
                    <configs>
                        <config key="allowedOrigins">*</config>
                        <config key="allowedMethods">
                            <values>
                                <value>GET</value>
                                <value>POST</value>
                                <value>PUT</value>
                                <value>DELETE</value>
                            </values>
                        </config>
                    </configs>
                </plugin>
                <plugin name="lombok" enable="true"></plugin>
                <plugin name="mybatis" enable="true"></plugin>
                <plugin name="page-helper" enable="true"></plugin>
                <plugin name="spring-boot" enable="true"></plugin>
                <plugin name="swagger2" enable="false"></plugin>
            </plugins>
        </export>
    </exports>
</project>